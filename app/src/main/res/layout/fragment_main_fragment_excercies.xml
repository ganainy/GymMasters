<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ganainy.dev.gymmasters.fragments.MainFragmentExcercies">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/triceps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/triceps" />

            <ImageView
                android:id="@+id/chest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/chest" />

            <ImageView
                android:id="@+id/shoulders"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/shoulder" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/biceps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/biceps" />

            <ImageView
                android:id="@+id/abs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/abs" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cardio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/cardio" />

            <ImageView
                android:id="@+id/leg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/lowerleg" />

            <ImageView
                android:id="@+id/showall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/showall" />

        </LinearLayout>

    </LinearLayout>

    <!--text views-->

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/text_shadow"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:shadowColor="#000"
                android:text="Triceps"
                android:textColor="@color/textwhite"
                android:textSize="20sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/text_shadow"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:shadowColor="#000"
                android:text="Chest"
                android:textColor="@color/textwhite"

                android:textSize="20sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/text_shadow"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:shadowColor="#000"
                android:text="Shoulders"
                android:textColor="@color/textwhite"

                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/text_shadow"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:shadowColor="#000"
                android:text="Biceps"
                android:textColor="@color/textwhite"
                android:textSize="20sp" />

            <TextView


            android:background="@color/text_shadow"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
            android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:shadowColor="#000"
            android:gravity="center"
                android:text="Abs"
                android:textColor="@color/textwhite"
                android:textSize="20sp" />

            <TextView


                android:background="@color/text_shadow"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:shadowColor="#000"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/textwhite"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/text_shadow"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:shadowColor="#000"
                android:text="Cardio"
                android:textColor="@color/textwhite"
                android:textSize="20sp" />

            <TextView


                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/text_shadow"
            android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:shadowColor="#000"
            android:gravity="center"
                android:text="Legs"
                android:textColor="@color/textwhite"
                android:textSize="20sp" />

            <TextView


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/text_shadow"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:shadowColor="#000"
                android:text="View all"
                android:textColor="@color/textwhite"
                android:textSize="20sp" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>