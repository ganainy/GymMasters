<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragmentExcercies">



   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:columnCount="3"
       android:rowCount="4"
       >

       <ImageView
           android:id="@+id/triceps"
           android:layout_width="0dp"
           android:layout_height="0dp"
         android:layout_columnWeight="1"
           android:layout_rowWeight="1"
         android:src="@drawable/triceps"
           android:scaleType="centerCrop"

           />
       <ImageView
           android:id="@+id/chest"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
android:src="@drawable/chest"
           android:scaleType="centerCrop"
           />

       <ImageView
           android:id="@+id/shoulders"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/shoulder"
           android:scaleType="centerCrop"
           />
       <ImageView
           android:id="@+id/biceps"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/biceps"
           android:scaleType="centerCrop"
           />
       <ImageView
           android:id="@+id/abs"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/abs"
           android:scaleType="centerCrop"
           />
       <ImageView
           android:id="@+id/back"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/back"
           android:scaleType="centerCrop"
           />
       <ImageView
           android:id="@+id/forearm"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/forarm"
           android:scaleType="centerCrop"
           />
       <ImageView
           android:id="@+id/upperleg"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/upperleg"
           android:scaleType="centerCrop"
           />
       <ImageView
           android:id="@+id/glutes"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/glutes"
           android:scaleType="centerCrop"
           />

       <ImageView
           android:id="@+id/cardio"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/cardio"
           android:scaleType="centerCrop"
           />
       <ImageView
           android:id="@+id/lowerleg"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:src="@drawable/lowerleg"
           android:scaleType="centerCrop"
           />

       <ImageView
           android:id="@+id/showall"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           android:scaleType="centerCrop"
           android:src="@drawable/showall" />
   </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="4"
        >

        <TextView


            android:background="@color/text_shadow"
            android:shadowColor="#000"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Triceps"
            android:textColor="@color/textwhite"
            android:shadowRadius="3.0"
            android:textSize="20sp" />

        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chest"
            android:textColor="@color/textwhite"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoulders"
            android:textColor="@color/textwhite"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biceps"
            android:textColor="@color/textwhite"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abs"
            android:textColor="@color/textwhite"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/textwhite"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forearm"
            android:textColor="@color/textwhite"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upper leg"
            android:textColor="@color/textwhite"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glutes"
            android:textColor="@color/textwhite"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardio"
            android:textColor="@color/textwhite"
            android:textSize="20sp"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lower leg"
            android:textColor="@color/textwhite"
            android:textSize="20sp"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:background="@color/text_shadow"
            />
        <TextView
            android:background="@color/text_shadow"
            android:fontFamily="sans-serif-black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show all"
            android:textColor="@color/textwhite"
            android:textSize="20sp"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            />


    </GridLayout>

</FrameLayout>