<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FindUsersActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/no_f"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notFoundTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="64dp"


        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:textColor="@color/textblack"
        android:textSize="32sp"
        android:visibility="invisible"

        app:layout_constraintEnd_toStartOf="@+id/usersRecycler"
        app:layout_constraintStart_toEndOf="@+id/usersRecycler"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="No followers yet" />

    <Button
        android:id="@+id/button"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Find users to follow"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/usersRecycler"
        app:layout_constraintStart_toStartOf="@+id/usersRecycler"
        app:layout_constraintTop_toBottomOf="@+id/notFoundTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>