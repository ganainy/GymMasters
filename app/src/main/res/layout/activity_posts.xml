<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sharedRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/no_f"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notFoundTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="No News feed from the users you follow"
        android:textColor="@color/textblack"
        android:textSize="32sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/usersRecycler"
        app:layout_constraintStart_toEndOf="@+id/usersRecycler"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Follow more users"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/notFoundTextView"
        app:layout_constraintStart_toStartOf="@+id/notFoundTextView"
        app:layout_constraintTop_toBottomOf="@+id/notFoundTextView" />


</android.support.constraint.ConstraintLayout>