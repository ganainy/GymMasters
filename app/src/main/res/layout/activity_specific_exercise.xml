<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="@color/activity_bg"
    tools:context=".ui.SpecificExerciseActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/loadingImageProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            app:layout_constraintEnd_toEndOf="@+id/youTubePlayerView"
            app:layout_constraintStart_toStartOf="@+id/youTubePlayerView"
            app:layout_constraintTop_toTopOf="@+id/youTubePlayerView"></ProgressBar>

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youTubePlayerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="invisible">

        </com.google.android.youtube.player.YouTubePlayerView>

        <ImageView
            android:id="@+id/exerciseImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fadingEdge="horizontal"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/youTubePlayerView">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Execution: "
                android:textColor="@color/textblack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/executionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text=" dd" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparation: "
                android:textColor="@color/textblack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/preparationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text=" dd" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanic: "
                android:textColor="@color/textblack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mechanicTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text=" dd" />

            <ImageView
                android:id="@+id/mechanicInfo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/question_mark" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utility: "
                android:textColor="@color/textblack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/utilityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text=" dd" />

            <ImageView
                android:id="@+id/utilityInfo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/question_mark" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>