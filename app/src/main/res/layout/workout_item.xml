<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:background="@drawable/circular_grey_bordersolid">

        <ImageView
            android:id="@+id/workoutImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/shadowImageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:alpha=".5"
            android:background="@color/text_shadow"
            app:layout_constraintBottom_toBottomOf="@+id/workoutImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/shadowImageView">

        <TextView
            android:id="@+id/textViewWorkoutName"
            style="@style/myTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/proximanovaregular"
            android:textAllCaps="true"
            android:textColor="@color/light_font"
            android:textSize="24sp"
            tools:text="workout name" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/dumbell_white" />

        <TextView
            android:id="@+id/textViewNumberOfExercises"
            style="@style/myTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/proximanovaregular"
            android:shadowColor="@color/text_shadow"
            android:textColor="@color/light_font"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="10" />

    </LinearLayout>


    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="35dp"

            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_access_time_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewReps"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <TextView
            android:id="@+id/textViewReps"
            style="@style/myTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
        android:fontFamily="@font/proximanovaregular"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textColor="@color/light_font"
            android:textSize="24sp"

            android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:text="45 Mins" />


</androidx.constraintlayout.widget.ConstraintLayout>


