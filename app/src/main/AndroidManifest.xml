<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@mipmap/file_download"
        android:roundIcon="@mipmap/file_download_round"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.PostsActivity"

            />
        <activity android:name=".ui.UserInfoActivity" />
        <activity android:name=".ui.FindUsersActivity" />
        <activity android:name=".ui.SpecificWorkoutActivity" />
        <activity android:name=".ui.CreateNewExerciseActivity" />
        <activity android:name=".ui.SpecificExerciseActivity" />
        <activity
            android:name=".ui.ExercisesActivity"
            android:label="@string/title_activity_exercises"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".ui.LoginActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.SignUpActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.WelcomeActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
